
# trading_app/.env.example
# Application Settings
APP_NAME="Trading App"

# Database Connection (IMPORTANT: Connects to PgBouncer)
DATABASE_URL="postgresql+asyncpg://user:password@pgbouncer:6432/app_db"

# JWT Settings
SECRET_KEY="<generate a strong secret key using: openssl rand -hex 32>"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Librarian RAG Service
LIBRARIAN_API_URL="http://librarian:8000/api/v1/chat"
LIBRARIAN_API_KEY="<librarian_service_secret_key>"